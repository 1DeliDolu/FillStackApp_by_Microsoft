@page "/fetchproducts"
@using System.Text.Json
@inject IHttpClientFactory HttpClientFactory

<h3>Product List</h3>

@if (isLoading)
{
    <p>Loading...</p>
}
else if (!string.IsNullOrWhiteSpace(error))
{
    <p class="text-danger">@error</p>
}
else if (products is null || products.Length == 0)
{
    <p>No products found.</p>
}
else
{
    <div class="product-list-card">
        <div class="product-list-header">
            <span>Inventory</span>
            <span class="product-count">@products.Length item(s)</span>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Product</th>
                        <th scope="col" class="text-end">Price</th>
                        <th scope="col" class="text-end">Stock</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in products)
                    {
                        <tr>
                            <th scope="row">@p.Id</th>
                            <td class="fw-semibold">@p.Name</td>
                            <td class="text-end">$@p.Price.ToString("F2")</td>
                            <td class="text-end">@p.Stock</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@code {
    private Product[]? products;
    private bool isLoading = true;
    private string? error;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var http = HttpClientFactory.CreateClient("ServerAPI");

            // ✅ Doğru route: api/productlist
            var response = await http.GetAsync("api/productlist");
            response.EnsureSuccessStatusCode();

            var json = await response.Content.ReadAsStringAsync();

            products = JsonSerializer.Deserialize<Product[]>(
                json,
                new JsonSerializerOptions { PropertyNameCaseInsensitive = true });

            if (products is null)
                error = "Sunucudan boş/uyumsuz veri geldi (products = null).";
        }
        catch (JsonException jex)
        {
            error = "Sunucudan geçersiz JSON geldi. (Console'u kontrol et)";
            Console.WriteLine($"JSON error: {jex.Message}");
        }
        catch (HttpRequestException hex)
        {
            error = $"API isteği başarısız: {hex.Message}";
            Console.WriteLine($"HTTP error: {hex.Message}");
        }
        catch (Exception ex)
        {
            error = $"Beklenmeyen hata: {ex.Message}";
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    public sealed class Product
    {
        public int Id { get; set; }
        public string? Name { get; set; }
        public double Price { get; set; }
        public int Stock { get; set; }
    }
}

<style>
    .product-list-card {
        border: 1px solid rgba(0, 0, 0, 0.08);
        border-radius: 12px;
        background: linear-gradient(180deg, #ffffff 0%, #fafafa 100%);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.06);
        overflow: hidden;
    }

    .product-list-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 14px 18px;
        background: #0f172a;
        color: #ffffff;
        font-weight: 600;
        letter-spacing: 0.2px;
    }

    .product-count {
        font-size: 0.85rem;
        color: #cbd5f5;
    }

    .table thead th {
        text-transform: uppercase;
        font-size: 0.78rem;
        letter-spacing: 0.6px;
        color: #475569;
        background-color: #f8fafc;
        border-bottom: 1px solid #e2e8f0;
    }

    .table tbody tr {
        transition: background-color 0.2s ease;
    }

    .table tbody tr:hover {
        background-color: #eef2ff;
    }
</style>
